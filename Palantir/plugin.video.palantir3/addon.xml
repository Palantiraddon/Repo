<addon id="plugin.video.palantir3" name="[COLOR gold]Palantir 3[/COLOR]" version="3.1.2" provider-name="TierraMedia">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.inputstreamhelper" version="0.5.0"/>
    <import addon="script.module.pycryptodome" version="3.4.3"/>
